<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nessam.client.AddEducationController">
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>

    <Label text="School Name:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField fx:id="schoolNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

    <Label text="Field of Study:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="fieldOfStudyField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="Start Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />

    <Label text="End Date:" GridPane.columnIndex="0" GridPane.rowIndex="3" />

    <Label text="Grade:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField fx:id="gradeField" GridPane.columnIndex="1" GridPane.rowIndex="4" />

    <Label text="Activities:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <TextArea fx:id="activitiesField" prefRowCount="3" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <Label text="Description:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
    <TextArea fx:id="descriptionField" prefRowCount="5" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <Label text="Skills:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
    <TextField fx:id="skillsField" GridPane.columnIndex="1" GridPane.rowIndex="7" />

    <Label text="Notify Network:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
    <CheckBox fx:id="notifyNetworkCheckbox" GridPane.columnIndex="1" GridPane.rowIndex="8" />
   <DatePicker fx:id="startDateField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <DatePicker fx:id="endDateField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   <HBox prefHeight="21.0" prefWidth="478.0" GridPane.columnIndex="1" GridPane.rowIndex="10">
      <children>
      
          <Button onAction="#addEducation" text="Submit" />
         <Button mnemonicParsing="false" onAction="#handleHomeAction" prefHeight="25.0" prefWidth="47.0" text="back">
            <HBox.margin>
               <Insets left="40.0" />
            </HBox.margin>
         </Button>
      </children>
   </HBox>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
